@model NIA_CRM.Models.Cancellation

<form asp-controller="Cancellation" asp-action="Archive" method="post" id="createSpecialtyForm">
    <div class="row">
        <div class="col-md-12">
            <div class="text-danger validation-summary-errors"><ul id="ErrorList"></ul></div>
            <!-- Hidden field to store MemberId -->
            <input type="hidden" asp-for="MemberID" />

            <!-- Display Member Name (Prevent Null Errors) -->
            <label>@(Model.Member != null ? Model.Member.MemberName : "Unknown Member")</label>

            <div class="form-group">
                <label asp-for="CancellationDate" class="control-label"></label>
                <input asp-for="CancellationDate" class="form-control" />
                <span asp-validation-for="CancellationDate" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCancelled" /> @Html.DisplayNameFor(model => model.IsCancelled)
                </label>
                <span asp-validation-for="IsCancelled" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CancellationNote" class="control-label"></label>
                <input asp-for="CancellationNote" class="form-control" />
                <span asp-validation-for="CancellationNote" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" id="submitSpecialtyCreate" value="Save" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
</form>
