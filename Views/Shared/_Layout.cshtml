<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NIA_CRM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">



</head>
<body>
    <div class="container-fluid main-container">
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="sidebar">
            <div class="position-sticky p-3">
                <ul class="nav flex-column">
                    <li class="nav-item" role="menuitem">
                        <a class="nav-link text-dark" href="@Url.Action("Index", "Home")" aria-label="Go to Home page" title="Home">
                            <span class="icon" aria-hidden="true"><i class="fas fa-home"></i></span>
                            <span class="text-white ms-2">Home</span>
                        </a>
                    </li>
                    <li class="nav-item" role="menuitem">
                        <a class="nav-link text-dark" href="@Url.Action("Index", "Member")" aria-label="Add a new member" title="Add Member">
                            <span class="icon" aria-hidden="true"><i class="fas fa-user-plus"></i></span>
                            <span class="text-white ms-2">Members</span>
                        </a>
                    </li>
                    <li class="nav-item" role="menuitem">
                        <a class="nav-link text-dark" href="@Url.Action("Index", "ProductionEmail")" aria-label="Access Production Email" title="Email">
                            <span class="icon" aria-hidden="true"><i class="fas fa-envelope"></i></span>
                            <span class="text-white ms-2">Production Email</span>
                        </a>
                    </li>
                    <li class="nav-item" role="menuitem">
                        <a class="nav-link text-dark" href="@Url.Action("Index", "Contact")" aria-label="View Contacts" title="Contacts">
                            <span class="icon" aria-hidden="true"><i class="fas fa-address-book"></i></span>
                            <span class="text-white ms-2">Contacts</span>
                        </a>
                    </li>
                    <li class="nav-item" role="menuitem">
                        <a class="nav-link text-dark" href="@Url.Action("Index", "MemberNote")" aria-label="View Notes for members" title="Notes">
                            <span class="icon" aria-hidden="true"><i class="fas fa-sticky-note"></i></span>
                            <span class="text-white ms-2">Member Notes</span>
                        </a>
                    </li>
                    <li class="nav-item" role="menuitem">
                        <a class="nav-link text-dark" href="@Url.Action("Index", "Cancellation")" aria-label="Manage Archivings" title="Archivings">
                            <span class="icon" aria-hidden="true"><i class="fas fa-ban"></i></span>
                            <span class="text-white ms-2">Archived</span>
                        </a>
                    </li>
                    @* <li class="nav-item" role="menuitem"> *@
                    @*     <a class="nav-link text-dark" href="@Url.Action("Index", "NAICSCode")" aria-label="Show NIACS Codes" title="NIACS Codes"> *@
                    @*         <span class="icon" aria-hidden="true"><i class="fas fa-ban"></i></span> *@
                    @*         <span class="text-black ms-2">NIACS Codes</span> *@
                    @*     </a> *@
                    @* </li> *@
                </ul>
                <!--<partial name="_LoginPartial" />-->
            </div>
        </nav>

        <!-- Main Content -->
        <div id="mainContent" class="main-content">
            <button id="toggleSidebar" class="btn btn-black">☰</button>
            <main role="main" class="pb-3">
                <div class="logo-container">
                    <a href="~/">
                        <img src="~/images/NIA-Logo.jpg" alt="Logo" class="logo" />
                    </a>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>


    <!-- Footer -->
    <footer class="border-top footer text-muted text-center" id="footer-scroll">
        <div class="container mt-2">
            &copy; 2025 - NIA CRM - <a href="@Url.Action("Privacy", "Home")">Privacy</a>
            <p>
                <input type="button" value="Back To Top" aria-label="Go back to top of the page" id="btnBackToTop" tabindex="19">
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.querySelector('.sidebar');
            const mainContent = document.querySelector('.main-content');
            const toggleButton = document.querySelector('#toggleSidebar');

            // Check the saved sidebar state from localStorage
            let sidebarState = localStorage.getItem('sidebarState');

            // If no sidebar state is saved (first visit), default to "open"
            if (!sidebarState) {
                sidebarState = 'open';
                localStorage.setItem('sidebarState', 'open'); // Save the initial state
            }

            // Apply the saved state immediately without triggering transitions
            if (sidebarState === 'open') {
                sidebar.classList.add('show');
                mainContent.classList.remove('sidebar-collapsed');
                toggleButton.innerHTML = '<i class="fas fa-arrow-left"></i>'; // For left arrow
            } else {
                sidebar.classList.remove('show');
                mainContent.classList.add('sidebar-collapsed');
                toggleButton.innerHTML = '<i class="fas fa-bars"></i>'; // For hamburger menu
            }

            // Prevent transition effects during page load
            sidebar.style.transition = 'none';
            mainContent.style.transition = 'none';

            // Re-enable transitions after a short delay
            setTimeout(() => {
                sidebar.style.transition = '';
                mainContent.style.transition = '';
            }, 0);

            // Add event listener to toggle the sidebar
            toggleButton.addEventListener('click', function () {
                sidebar.classList.toggle('show');
                mainContent.classList.toggle('sidebar-collapsed');

                // Save the new state to localStorage
                if (sidebar.classList.contains('show')) {
                    localStorage.setItem('sidebarState', 'open');
                    toggleButton.innerHTML = '<i class="fas fa-arrow-left"></i>'; // For left arrow
                } else {
                    localStorage.setItem('sidebarState', 'closed');
                    toggleButton.innerHTML = '<i class="fas fa-bars"></i>'; // For hamburger menu
                }
            });
        });


    </script>
    <script type="text/javascript">
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
