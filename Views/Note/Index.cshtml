@model IEnumerable<NIA_CRM.Models.Notes>

@{
    ViewData["Title"] = "Notes Index";
}

<h1>@ViewData["Title"]</h1>

<!-- Create New Note Button -->
<p>
    <a asp-action="Create">Create New Note</a>
</p>

<!-- Notes Data Table -->
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.NoteContent)</th>
            <th>@Html.DisplayNameFor(model => model.Contact)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var note in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => note.NoteContent)</td>
                    <td>@Html.DisplayFor(modelItem => note.Contact.ContactFirstName)</td>
                    <td>@note.CreatedDate.ToString("dd-MMM-yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@note.ID">Edit</a>
                        <a asp-action="Details" asp-route-id="@note.ID">Details</a>
                        <a asp-action="Delete" asp-route-id="@note.ID">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No notes available.</td>
            </tr>
        }
    </tbody>
</table>
