@model NIA_CRM.Models.Member



<div>
    <h3>Preview Member Details</h3>
    <div class="d-flex">
        <img src="~/images/preview.jpg" alt="Profile Picture of Summary"
             title="Profile Picture of Summary" class="img-fluid rounded" style="max-width: 150px; margin-right: 15px;" />
    <p><strong>Member Name:</strong> @Model.Summary</p>
    <p><strong>Organization:</strong> @Model.Organization?.OrganizationName</p>
    <p><strong>Address:</strong> @Model.Address</p>
    <p>
        @Model.Address?.AddressLineOne
        @if (!string.IsNullOrEmpty(Model.Address?.AddressLineTwo))
        {
            <br />@Model.Address.AddressLineTwo
        }
        <br />@Model.Address?.City, @Model.Address?.StateProvince, @Model.Address?.PostalCode
        <br />@Model.Address?.Country
    </p>
    @if (!string.IsNullOrEmpty(Model.Organization?.OrganizationWeb))
    {
        <p><strong>Website:</strong> <a href="@Model.Organization.OrganizationWeb" target="_blank">@Model.Organization.OrganizationWeb</a></p>
    }
   
</div>


    <div class="mt-3">
        <label for="memberNote"><strong>Additional Notes:</strong></label><br />
        <textarea id="memberNote" name="memberNote" class="form-control" rows="4" placeholder="Add notes here..." data-id="@Model.ID"></textarea>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
        <a asp-action="Details" asp-route-id="@Model.ID">Details</a> |
        <a asp-action="Delete" asp-route-id="@Model.ID">Delete</a>
    </div>
</div>
