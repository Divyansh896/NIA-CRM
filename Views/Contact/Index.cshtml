            <td>
                @Html.DisplayFor(modelItem => item.LinkedinUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVIP)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
